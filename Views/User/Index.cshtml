
@{
    ViewData["Title"] = "Index";

}

<h3>Usuarios</h3>
<a align="center " class="button btn-primary" asp-action="Create">Crear usuario</a>

<div class="col-lg-12" align="center">
    <div class="card card-primary card-outline" align="center">
        <div class="card-body">
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <td>Id</td>
                        <td>Correo electronico</td>
                        <td>Accion</td>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>@user.Id</td>
                            <td>@user.Email</td>
                            <td><a class="btn-danger btn-sm"
                               data-id="@user.Id"><i class="fas fa-trash-alt"></i>
                            </a></td>
                            

                        </tr>


                    }
                </tbody>
            </table>
        </div>
    </div>
</div>