@model ROSARIOAPP.Models.Materia

@{
    ViewData["Title"] = "Materia/editar";
    Layout = null;
}

<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Idmateria" />
            <div class="form-group">
                <label asp-for="Iddocente" class="control-label">Docente</label>
                <select asp-for="Iddocente" class="form-select" asp-items="ViewBag.Iddocente" disabled></select>
                <span asp-validation-for="Iddocente" class="text-danger" ></span>
            </div>
            <div class="form-group">
                <label asp-for="Nombre" class="control-label">Nombre de materia</label>
                <input asp-for="Nombre" class="form-control" min="5" maxlength="30"  pattern="^[Aa-Zz]*$" oninvalid="setCustomValidity('El nombre de la materia no debe tener mas de 30 caract')" oninput="setCustomValidity('')" required/>
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>

            <div class="modal-footer">
                <button type="submit" class="btn-sm btn-primary">
                    <i class="fa fa-save"></i>
                    Guardar
                </button>
                <button type="button" href="#myModal" class="btn-sm btn-danger" data-dismiss="modal">Cerrar</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
