@model ROSARIOAPP.Models.Grado

@{
    ViewData["Title"] = "Create";
    Layout = null;
}

<div class="row">
    <div class="col-md-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Grado1" class="control-label">Selecciona el grado:</label>
                <select asp-for="Grado1" class="form-control" required=""> @*//Validacion de formulario*@
                   
                    <option> Primero</option>
                    <option> Segundo</option>
                    <option> Tercero</option>
                    <option> Cuarto</option>
                    <option> Quinto</option>
                    <option> Sexto</option>

                </select>
                <span asp-validation-for="Grado1" class="text-danger"></span>
            </div>

            @*//Botones de guardado y cerrado*@
            <div class="modal-footer" >

                <button type="submit" class="btn-sm btn-primary">
                    <i class="fa fa-save"></i>
                    Guardar
                </button>

                <button type="button" href="#myModal" class="btn-sm btn-danger" data-dismiss="modal">Cerrar</button>
            </div>

        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
