@model ROSARIOAPP.Models.Grupo

@{
    ViewData["Title"] = "Edit";
}


<div class="row">
    <div class="col-md-10">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Idgrupo" />
            <div class="form-group">
                <label asp-for="Idgrado" class="control-label"></label>
                <select asp-for="Idgrado" class="form-control" asp-items="ViewBag.Idgrado"></select>
                <span asp-validation-for="Idgrado" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="seccion" class="control-label"></label>
                <input asp-for="seccion" class="form-control" />
                <span asp-validation-for="seccion" class="text-danger"></span>
            </div>

            @*//Botones de guardado y cerrado*@
            <div class="modal-footer">

                <button type="submit" class="btn-sm btn-primary">
                    <i class="fa fa-save"></i>
                    Guardar
                </button>

                <button type="button" href="#myModal" class="btn-sm btn-danger" data-dismiss="modal">Cerrar</button>
            </div>

        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
