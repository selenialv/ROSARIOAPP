@model ROSARIOAPP.Models.Asignar

@{
    ViewData["Title"] = "Create";
}

<h4>Asignar</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateAsignar" >
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @Html.HiddenFor(Model => Model.Idgrupo)
            <div class="form-group">
                <label asp-for="Iddocente" class="control-label"></label>
                <select asp-for="Iddocente" class="form-control" asp-items="ViewBag.Iddocente"></select>
            </div>
            <div class="form-group">
                <label asp-for="tutor" class="control-label"></label>
                <input asp-for="tutor" class="form-control" />
                <span asp-validation-for="tutor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <div>
        @Html.ActionLink("Regresr", "Details", new { id = Model.Idgrupo })
        <a asp-action="Index">Back to List</a>
    </div>
    
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
