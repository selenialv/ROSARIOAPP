@model ROSARIOAPP.Models.Docente

@{
    ViewData["Title"] = "Create";
    Layout = null;
}
<div class="row">

    <div class="col-md-12">
        <form asp-action="Create" onsubmit="return validacion()">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-row">
                <div class="col">
                    <label asp-for="Nombres" class="control-label">Nombres completos</label>
                    <input asp-for="Nombres" class="form-control" 
                         pattern="^[Aa-Zz]*$" oninvalid="setCustomValidity('Los nombres deben contener menos de 20 carácteres')" oninput="setCustomValidity('')"  maxlength="20" required />
                    <span asp-validation-for="Nombres" class="text-danger"></span>
                </div>

                <div class="col">
                    <label asp-for="Apellidos" class="control-label">Apellidos completos</label>
                    <input asp-for="Apellidos" class="form-control"required oninvalid="setCustomValidity('Los apellidos deben contener menos de 20 carácteres')"  maxlength="20" oninput="setCustomValidity('')"/>
                    <span asp-validation-for="Apellidos" class="text-danger"></span>
                </div>
            </div>

            <div class="form-row">
                <div class="col-sm-4">
                    <label asp-for="Cedula" class="control-label">Cédula de identidad</label>
                    <input id="cedula" asp-for="Cedula" class="form-control" pattern="[0-9]{13}[A-Za-z]{1}"title="Debe poner 13 números y una letra,  ejem: (000-000000-000X)" />
                    <span asp-validation-for="Cedula" class="text-danger"></span>
                </div>


                <div class="col-sm-4">  

                    <label asp-for="Sexo" class="control-label">Sexo</label>
                    <select  asp-for="Sexo" class="form-control" required>
             
                        <option>M</option>
                        <option>F</option>

                    </select>
                    <span asp-validation-for="Sexo" class="text-danger"></span>
                </div>

                <div class="col-sm-4">
                    <label asp-for="Telefono" class="control-label">Teléfono</label>
                    <input asp-for="Telefono" class="form-control" type="number"  required />
                    <span asp-validation-for="Telefono" class="text-danger"></span>
                </div>
            </div>



            <div class="form-row">
                <div class="col-sm-6">
                    <label asp-for="Profesion" class="control-label">Profesión</label>
                    <input asp-for="Profesion" class="form-control"  type="text" />
                    <span asp-validation-for="Profesion" class="text-danger"></span>
                </div>

                <div class="col-sm-5">
                    <label asp-for="Departamento" class="control-label"></label>
                    <select asp-for="Departamento" id="selection" class="form-control select2-container--bootstrap4" style="width: 100%;" tabindex="-1" aria-hidden="true" required="">

                        <option>Esteli</option>
                        <option>León</option>
                        <option>Chinandega</option>
                        <option>Matagalpa</option>
                        <option>Jinotega</option>
                        <option>Madriz</option>
                        <option>Nueva Segovia</option>
                        <option>Boaco</option>
                        <option>Chontales</option>
                        <option>Rio San Juan</option>
                        <option>Carazo</option>
                        <option>Granada</option>
                        <option>Masaya</option>
                        <option>Rivas</option>
                        <option>Costa Caribe Norte (RAAN)</option>
                        <option>Costa Caribe Sur (RAAS)</option>
                    </select>

                    <span asp-validation-for="Departamento" class="text-danger"></span>
                </div>

            </div>
            <div class="form-row">
                <div class="col">
                    <label asp-for="Direccion" class="control-label"> Dirección</label>
                    <input asp-for="Direccion" class="form-control" maxlength="45" title="La direccion debe tener
                           menos de 45 caracteres" required />
                    <span asp-validation-for="Direccion" class="text-danger"></span>
                </div>
            </div>
            <br />
            @*//Botones de guardado y cerrado*@
            <div class="modal-footer">
                <button type="submit" class="btn-sm btn-primary">
                    <i class="fa fa-save"></i>
                    Guardar
                </button>
                <button type="button" href="#myModal" class="btn-sm btn-danger" data-dismiss="modal">Cerrar</button>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

}

<script>

    $(document).ready(function () {
        $("#selection").select2({
            placeholder: "Selecciona un departamento",
            allowClear: true,
            dropdownParent: $("#myModal")
        });
    });

</script>