@model IEnumerable<ROSARIOAPP.Models.Modalidad>

@{
    ViewData["Title"] = "Index";
}

<div class="content-wrapper">
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">

            </div><!-- /.container-fluid -->
        </div>
        <div class="col-lg-12">
            <div class="card card-primary card-outline">
                <div class="card-body">

                    <h6 class="card-title text-blue">Listado de materias</h6>
                    <!-- Modal -->
                    <div id="myModal" data-refresh="true" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModelLabel" aria-hidden="true"
                         style="display: none;">
                        <div class="modal-dialog modal-sm">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="staticBackdropLabel">Modalidades</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>

                                </div>
                                <div class="modal-body">
                                    <div class="align-content-center"
                                         id="modal-content">
                                        <h4> Cargando..</h4>
                                    </div>
                                </div>
                               
                            </div>
                        </div>
                    </div>


                    <div class="container">
                        <div class="row">
                            <div class="col text-right">
                                <a id="btnNuevo" data-toggle="modal" href="#myModal" class="btn btn-success btn-sm"><i class="fas fa-plus"> Nueva modalidad</i></a>
                            </div>
                        </div>
                    </div>
                    <br />

                    <div class="container">
                        <div class="row">

                            
                            <table id="myTable" class="table">
                                <thead>
                                    <tr>
                                        <th>
                                            #
                                        </th>
                                        <th>
                                            Modalidad
                                        </th>
                                        <th>Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Idmodalidad)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Modalidad1)
                                        </td>
                                        <td>
                                            <a href="#myModal" class="btnEdit btn-primary btn-sm" data-toggle="modal"
                                               data-id="@item.Idmodalidad"><i class="fas fa-edit"></i></a>


                                            <a href="#myModal" class="btnDelete btn-danger btn-sm" data-toggle="modal"
                                               data-id="@item.Idmodalidad"><i class="fas fa-trash-alt"></i></a>
                                        </td>
                                    </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>

                </div>
            </div>

        </div>

    </div>
</div>
<script>
    $(document).ready(function () {
        $('#mateTable').DataTable({
            "language": {
                "url": "//cdn.datatables.net/plug-ins/1.10.15/i18n/Spanish.json"
            },

        });
    });
</script>





    @section scripts
{

        <script src="~/js/Modalidad/Modalidad.js"></script>

    }
