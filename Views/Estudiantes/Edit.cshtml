@model ROSARIOAPP.Models.Estudiante

@{
    ViewData["Title"] = "Edit";
    Layout = null;
}


<div class="row">
    <div class="col-md-12">      
        <form class="form-horizontal" style="margin:0 auto" asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Idestudiante" />
            <div class="form-group col-sm-4">
                <label asp-for="codigo" class="control-label"></label>
                <input asp-for="codigo" class="form-control" />
                <span asp-validation-for="codigo" class="text-danger"></span>
            </div>
            <div class="form-group ">
                <label asp-for="Nombres" class="control-label"></label>
                <input asp-for="Nombres" class="form-control" />
                <span asp-validation-for="Nombres" class="text-danger"></span>

                <div class="col">
                    <label asp-for="Apellidos" class="control-label"></label>
                    <input asp-for="Apellidos" class="form-control" />
                    <span asp-validation-for="Apellidos" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="fecha_nac" class="control-label"></label>
                <input asp-for="fecha_nac" class="form-control" />
                <span asp-validation-for="fecha_nac" class="text-danger"></span>
            </div>
            <div class="form col-sm-2">
                <label asp-for="Edad" class="control-label"></label>
                <input asp-for="Edad" class="form-control" />
                <span asp-validation-for="Edad" class="text-danger"></span>

                <div class="col-sm-2">
                    <label asp-for="Sexo" class="control-label"></label>
                    <input asp-for="Sexo" class="form-control" />
                    <span asp-validation-for="Sexo" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Departamento" class="control-label"></label>
                <select asp-for="Departamento" id="selection" class="form-control select2-container--bootstrap4" style="width: 100%;" tabindex="-1" aria-hidden="true" required="">

                    <option>Esteli</option>
                    <option>León</option>
                    <option>Chinandega</option>
                    <option>Matagalpa</option>
                    <option>Jinotega</option>
                    <option>Madriz</option>
                    <option>Nueva Segovia</option>
                    <option>Boaco</option>
                    <option>Chontales</option>
                    <option>Rio San Juan</option>
                    <option>Carazo</option>
                    <option>Granada</option>
                    <option>Masaya</option>
                    <option>Rivas</option>
                    <option>Costa Caribe Norte (RAAN)</option>
                    <option>Costa Caribe Sur (RAAS)</option>
                </select>
                <span asp-validation-for="Departamento" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Direccion" class="control-label"></label>
                <input asp-for="Direccion" class="form-control" />
                <span asp-validation-for="Direccion" class="text-danger"></span>
            </div>
            <br />
            @*//Botones de guardado y cerrado*@
            <div class="modal-footer">
                <button type="submit" class="btn-sm btn-primary">
                    <i class="fa fa-save"></i>
                    Guardar
                </button>
                <button type="button" href="#myModal" class="btn-sm btn-danger" data-dismiss="modal">Cerrar</button>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
