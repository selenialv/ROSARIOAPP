@{
    ViewData["Title"] = "Index";

}

<h3>Lista de roles</h3>
<a align="right" class="btn btn-primary" asp-action="Create">Crear rol</a>
@Html.ActionLink("Create New Role", "Create") | @Html.ActionLink("Manage User Role", "ManageUserRoles")
<div class="col-lg-12" align="center">
    <div class="card card-primary card-outline" align="center">
        <div class="card-body">
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <td>Id</td>
                        <td>Tipo de rol</td>

                        <td>Accion</td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var role in Model)
                    {
                        <tr>
                            <td>@role.Id</td>
                            <td>@role.Name</td>

                            <td>
                                <p>
                                    <strong>@role.Name | </strong>
                                    <span onclick="return confirm('Are you sure to delete?')"><a href="/Roles/Delete?RoleName=@role.Name" class="delLink" style="color:red;">Delete</a></span> |
                                    @Html.ActionLink("Edit", "Edit", new { roleName = @role.Name })
                                </p>
                            </td>
                        </tr>

                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
