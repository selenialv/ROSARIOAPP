@{
    ViewData["Title"] = "Index";
   
}

<h3>Lista de roles</h3>
<a  align="right"class="btn btn-primary"  asp-action="Create">Crear rol</a>

<div class="col-lg-12" align="center">
    <div class="card card-primary card-outline" align="center">
        <div class="card-body">
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <td>Id</td>
                        <td>Tipo de rol</td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var role in Model)
                    {
                        <tr>
                            <td>@role.Id</td>
                            <td>@role.Name</td>
                        </tr>

                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
