@model ROSARIOAPP.Models.Asignar

@{
    ViewData["Title"] = "Edit";
}

<div class="row">
    <div class="mb-auto">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Idasignar" />
            <div class="form-group">
                <label asp-for="Iddocente" class="control-label"></label>
                <select asp-for="Iddocente" class="form-control" asp-items="ViewBag.Iddocente"></select>
                <span asp-validation-for="Iddocente" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Idgrupo" class="control-label"></label>
                <select asp-for="Idgrupo" class="form-control" asp-items="ViewBag.Idgrupo"></select>
                <span asp-validation-for="Idgrupo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="tutor" class="control-label"></label>
                <input asp-for="tutor" class="form-control" />
                <span asp-validation-for="tutor" class="text-danger"></span>
            </div>

        </form>

        <div class="form-group" align="right">
            <div class="modal-footer">

                <input type="submit" value="Guardar" class="btn btn-primary" />


                <button type="button" href="#myModal" class="btn btn-danger" data-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
