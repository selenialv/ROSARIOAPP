@model ROSARIOAPP.Models.Asignar

@{
    ViewData["Title"] = "Create";
    Layout = null;
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.3/css/select2.css" rel="stylesheet" />


<div class="row">
    <div class="col-md-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Iddocente" aria-label="Seleccione docente" class="control-label">Seleccione un docente:</label>
                <select name="selection" id="selection" asp-for="Iddocente" class="form-control select2-container--bootstrap4" style="width: 100%;" tabindex="-1" aria-hidden="true" asp-items="ViewBag.Iddocente" required></select>
            </div>
            <div class="form-group">
                <label asp-for="Idgrupo" aria-label="Seleccione grupo" class="control-label">Seleccione un grupo:</label>
                <select asp-for="Idgrupo" class="form-control" asp-items="ViewBag.Idgrupo" ></select>
            </div>
            <div class="form-group">
                <label asp-for="tutor" class="control-label">Tutor:</label>
                <input asp-for="tutor" placeholder="Tutor" class="form-control" />
                <span asp-validation-for="tutor" class="text-danger"></span>
            </div>

            @*//Botones de guardado y cerrado*@
            <div class="modal-footer">

                <button type="submit" class="btn-sm btn-primary">
                    <i class="fa fa-save"></i>
                    Guardar
                </button>

                <button type="button" href="#myModal" class="btn-sm btn-danger" data-dismiss="modal">Cerrar</button>
            </div>
        </form>
    </div>
</div>





@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

}

<script>

    $(document).ready(function () {
        $("#selection").select2({
            dropdownParent: $("#myModal")
        });
    });

</script>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.3/js/select2.js"></script>
